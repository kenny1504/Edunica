<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
			android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
    android:orientation="horizontal">
       <EditText
        android:inputType="textPersonName"
        android:layout_width="250dp"
        android:hint="Buscar Usuario"
	    android:layout_height="wrap_content"
        android:id="@+id/editText_filtrar_Admin_user" />
    <Button
        android:text="Buscar"
        android:layout_width="90dp"
        android:layout_marginLeft="10dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:background="#ff17a589"
        android:textColor="@android:color/white"
        android:id="@+id/btn_filtrar_usuarioADMIN" />
    </LinearLayout>
    <ListView
		android:minWidth="45px"
		android:minHeight="24px"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:id="@+id/LV_Admin_usuario"/>
</LinearLayout>
